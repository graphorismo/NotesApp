<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notesListItem_constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:paddingHorizontal="15dp"
    android:paddingVertical="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.7"
        >

        <TextView
            android:id="@+id/notesListItem_textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="TITLE" />

        <TextView
            android:id="@+id/notesListItem_textViewDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="DESCRIPTION"
            />

    </LinearLayout>

    <CheckBox
        android:id="@+id/notesListItem_checkBoxDone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="DONE"
        android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/notesListItem_imageButtonDelete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_baseline_delete_24"
        tools:ignore="SpeakableTextPresentCheck" />
</LinearLayout>